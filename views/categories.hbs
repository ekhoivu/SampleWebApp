<div class="row">
    <div class="col-md-12">
          <h2>Categories<a href="/categories/add" class="btn btn-success pull-right">Add Category</a></h2>
          
          <hr />

           <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                    <tr>
                        <td><a href="/posts?category={{id}}">{{id}}</a></td>
                        <td><a href="/posts?category={{id}}">{{category}}</a></td>
                        <td><a href="/categories/delete/{{id}}" class="btn btn-danger">Delete Category</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
          </div>         
    </div>
    <div class="col-md-12 text-center">
        {{#unless categories}}
            <strong>{{message}}</strong>
        {{/unless}}
    </div>
</div>
