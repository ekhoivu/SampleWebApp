<div class="row">
    <div class="col-md-12">
          <h2>Categories</h2>
          <hr />

           <div class="table-responsive">
            <table class="table">
                <tbody>
                    {{#each categories}}
                    <tr>
                        <td><a href="/posts?category={{id}}">{{id}}</a></td>
                        <td><a href="/posts?category={{id}}">{{category}}</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
          </div>         
    </div>
    <div class="col-md-12 text-center">
        {{#unless categories}}
            <strong>{{message}}</strong>
        {{/unless}}
    </div>
</div>
